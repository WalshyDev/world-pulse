{
  "name": "@world-pulse/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply world-pulse-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply world-pulse-db --remote"
  },
  "dependencies": {
    "@world-pulse/shared": "workspace:*",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.7.10"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.8.3",
    "wrangler": "4.58.0"
  }
}
